<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="coop_info">
      <h1><%= @coop.name %></h1>
      <p><%= @coop.description %></p>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Members</h3>
    <% if @members.any? %>
      <ul class="members">
        <%= render partial: "member", collection: @members, as: :member %>
      </ul>
      <%= will_paginate @members %>
    <% end %>
  </div>
</div>
