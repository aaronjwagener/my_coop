<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <p id="notice"><%= notice %></p>
    <section class="user_info">
      <h1><%= @user.name %></h1>
    </section>
    <section>
      <% if current_user?(@user) %>
        <%= link_to 'Edit', edit_user_path(@user) %> |
      <% end %>
      <%= link_to 'Back', users_path %>
    </section>
  </aside>
</div>
